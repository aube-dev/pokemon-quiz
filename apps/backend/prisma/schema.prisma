generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  nickname  String?
  scores    Score[]
  createdAt DateTime @default(now())
}

model Pokemon {
  id       Int     @id
  name     String
  type1    String
  type2    String?
  imageUrl String
}

model Score {
  id        Int      @id @default(autoincrement())
  score     Int
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
